generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("SF_ORDERS_DATABASE_URL")
  shadowDatabaseUrl = env("SF_ORDERS_SHADOW_DATABASE_URL")
}

// npx prisma migrate reset
// npx prisma migrate dev --name init_orders_schema

model Order {
  order_id          Int          @id @default(autoincrement())
  customer_id       Int
  status_id         Int
  shipment_id       Int
  payment_info_id   Int
  order_total       Float
  brand_id          Int
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt
  items             OrderItem[]
}

model OrderItem {
  item_id        Int   @id @default(autoincrement())
  order_id       Int
  product_id     Int
  quantity       Int
  unit_price     Float
  total_price    Float 
  order          Order @relation(fields: [order_id], references: [order_id])
}
