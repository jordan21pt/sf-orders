{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noEmitOnError": true,
    "declaration": false,
    "sourceMap": false,
    "types": ["node", "jest", "express"]
  },
  "include": ["src//*.ts", "src//.tsx", "src/**/.mts", "src//*.cts"],
  "exclude": ["/.test.", "/tests/"]
}
